<style type="text/css">
   body { background-color: #D8D8D8; }
  #div1{background-color:#f5f5f5;padding:40px;width:300px;}
</style>



<h1></h1>


    <div class="btn-group">
    <%= link_to 'Home', root_url, class: "btn btn-info" %>
    <%= link_to 'About', about_url, class: "btn btn-info" %>
    <%= link_to 'Terms', terms_url, class: "btn btn-info" %>
     <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
            English
            <span class="caret"></span>
    </a>
            <ul class="dropdown-menu">
            <!-- dropdown menu links -->
            </ul>
    </div>

<p></p>

      <hr>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class ="span4">
      <%= render 'shared/feed' %>
    </div>
  </div>

<% else %>
      <div class="jumbotron">
        <FONT size = "20">Join one of the fastest growing fitness</FONT>
        <p></p>
        <FONT size = "20">communities!</FONT>
        <p></p>
        <p class="lead">Fit app provides an easy to use way to communicate with fellow 
            exercise enthusiasts. Add pictures, update status, read up on friend's workouts and
            follow motivation figures. Find out what everyone in the gym is talking about by
            signing up!</p>
        <div class="row">
         <div class="span3 offset4">
         <a href="/signup"  class="btn btn-large btn-primary" data-loading-text="Log IN" button style="background-color:5686E6" ><FONT COLOR="#FFF">Sign up today!</FONT></a>
        </div>
      </div>
     </div>

      <hr>

<p></p>

    <div class="row">
         <div class="span8 offset1">
            <h3>Already a member?!</h3>
         </div>
    </div>

<div class="row">
    <div class="span8" id="div1">

    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    </div>

    <div class="span4">
    <img src="http://www.best-of-web.com/_images_300/Weightlifting_Icon_Showing_a_Hand_Holding_Up_a_Barbell_110110-127308-708042.jpg", width="200" , height="200" class="img-circle"> </img>
    </div>

</div>
<%end %>
    <hr>
    <div class="footer">
        <p>&copy; Fit App 2012</p>
    </div>
    </hr>

