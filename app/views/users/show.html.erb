
<!DOCTYPE html>
<html>
<%= @user.name %>, <%= @user.email %> 
<head>
<meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>Your Income Expert</title>
    <link type="text/css" rel="stylesheet/less" href="less/style.less">
    <link type="text/css" rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap.css">
    <script type="text/javascript" src="js/less.js"></script>
    <script type='text/javascript' src='http://code.jquery.com/jquery-1.7.1.js'></script>
    <script type="text/javascript" src="http://twitter.github.com/bootstrap/assets/js/bootstrap-tab.js"></script>
    <script type="text/javascript" src="http://twitter.github.com/bootstrap/assets/js/bootstrap-carousel.js"></script>
</head>
<style type="text/css">
#div1 {background-color: #87ceeb;padding:40px;width:200px;}
#div2{background-color: #f5f5f5;
    padding:40px;
    width:600px;   
margin-left: 50px;}

</style>
<body>

<ul class='nav nav-tabs' id='tab'>
  <li class="active"><a href="#Feed" data-toggle="tab">Feed</a></li>
  <li><a href="#Workouts" data-toggle="tab">Workouts</a></li>
  <li><a href="#Diets" data-toggle="tab">Diets</a></li>
  <li><a href="#Media" data-toggle="tab">Media</a></li>
</ul>

 <div class="tab-content">
    <div class='tab-pane active' id='Feed'>
  

    <div class="container-fluid">

        <div class="row-fluid">
            
            <div class="span2" id="div1">

            <p></p>
                <p></p>
                <p></p>
                <font>Name:</font> <%= @user.name %>
                <p></p>
                <font>Age:</font> 20 <!-- Add user.age -->
                <%= image_tag @user.photo %>

		<div id="follow_form">
                <% unless current_user?(@user) %>
                  <% if current_user.following?(@user) %>
                    <%= render 'unfollow' %>
                  <% else %>
                    <%= render 'follow' %>
                  <% end %>
                <% end %>
                </div>      
        </div>
        
         <div class="span6" id="div2">
                 <%= render 'shared/post_form' %>

            <table class="table table-bordered">
            <hr>
                    <% if @user.posts.any? %>
                        <ol class="microposts">
                            <%= render @posts %>
                        </ol>
                    <% end %>
            </hr>
         </table>
         </div>

    </div>
    </div>
  </div>

  <div class='tab-pane' id='Workouts'>
    <div class="container-fluid">
        <div class="row-fluid">
            
            <div class="span2" id="div1">
               
            <p></p>
                <p></p>
                <p></p>
                <font>Name:</font> <%= @user.name %>
                <p></p>
                <font>Age:</font> 20 <!-- Add user.age -->
                <%= image_tag @user.photo %>
        </div>
        
        
         <div class="span6" id="div2">
                 <legend>Workouts</legend>
                   <% if @user.workouts.any? %>
                    <%= render @workout %>
                   <% end %>

                

<%= link_to 'New Workout', new_workout_path, class: "btn btn-info"  %>

         </div>

    </div>
    </div>
  
  </div>

  <div class='tab-pane' id='Diets'>
  <div class="container-fluid">
        <div class="row-fluid">
            
            <div class="span2" id="div1">
                
                
            <p></p>
                <p></p>
                <p></p>
                <font>Name:</font> <%= @user.name %>
                <p></p>
                <font>Age:</font> 20 <!-- Add user.age -->
                <%= image_tag @user.photo %>
        </div>
        
        
         <div class="span6" id="div2">
                 <legend>Diets</legend>
                    <% if @user.diets.any? %>
                    <ol class="dietList">
                      <%= render @diet %>
                    </ol>
                    <% end %>
                    <%= link_to 'New Diet', new_diet_path, class: "btn btn-info" %>
         </div>
    </div>
    </div>
  
  </div>

  <div class='tab-pane' id='Media'>
  <div class="container-fluid">
        <div class="row-fluid">
            <div class="span2" id="div1">
                
                
            <p></p>
                <p></p>
                <p></p>
                <font>Name:</font> <%= @user.name %>
                <p></p>
                <font>Age:</font> 20 <!-- Add user.age -->
                <p></p>
                <%= image_tag @user.photo %>
                <p></p>
                <%= link_to 'Images',new_photo_path, class: "btn btn-info" %>  
        </div>
        
        
         <div class="span6" id="div2">
                 <legend>Media</legend>
                 <% if @user.photos.any? %>
                  <div id="myCarousel" class="carousel">  
                   <!-- Carousel items -->  
                  <div class="carousel-inner"> 
                  <div class ="active item">
                          <%= image_tag @user.photo %>
                  </div> 
                      <%= render @photos %> 
                  </div>  
                  <!-- Carousel nav -->  
                  <a class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>  
                  <a class="carousel-control right" href="#myCarousel" data-slide="next">›</a>  
                  </div>  
                  <% end %>
         </div>

    </div>
    </div>
  
  </div>
</div>
</body>
</html>
