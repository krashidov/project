<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Posts:</b> <%= @user.posts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user-avatars">
          <% @users.each do |user| %>
      <%= image_tag user.photo %>
      <%= link_to user.name, user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
</div>