<h1>Listing workouts</h1>

<table class="table table-bordered">
  <colgroup>
    <col style="background-color:#58ACFA">
        <col style="background-color:#87C7E7">
        <col style="background-color:#58ACFA">
        <col style="background-color:#87C7E7">
  </colgroup>
  <tr>
    <th>Name</th>
    <th>Time</th>
    <th>Workout type</th>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workouts.each do |workout| %>
  <tr>
    <td><%= workout.name %></td>
    <td><%= workout.time %></td>
    <td><%= workout.workout_type %></td>
    <td><%= workout.content %></td>
    <td><%= workout.user_id %></td>
    <td><%= link_to 'Show', workout %></td>
    <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
    <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

